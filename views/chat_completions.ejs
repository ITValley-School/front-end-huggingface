<meta name="ac:route" content="/chat_completions">

<head>
    <meta charset="UTF-8" head-page="layouts/main">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat Completions</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/chat.css">
</head>

<body>
    <div class="wrapper">
        <div class="chat-container">
            <div class="chat-messages" id="chat-messages">
                <div class="message assistant-message">
                    <div class="message-header">Assistente</div>
                    Olá! Como posso ajudar você hoje?
                </div>
            </div>

            <div class="input-container">
                <div class="input-box">
                    <textarea id="chat-input" placeholder="Digite sua mensagem aqui..." rows="1" onInput="this.style.height = 'auto'; this.style.height = this.scrollHeight + 'px';"></textarea>
                    <button id="send-button">➤</button>
                </div>
            </div>
            <div class="chat-messages" id="chat-messages">
            </div>
        </div>
    </div>
    <script src="/assets/js/chat.js"></script>
</body>